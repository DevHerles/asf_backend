<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="condominium.water_counter_unique_report_pdf"
            name="Reporte de consumo de Agua - Unique">
            <t t-call="report.html_container">
                <!-- <t t-foreach="docs" t-as="o"> -->
                    <t t-call="report.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            
                            <div class="header">
                                <div class="row">
                                    <!-- <span t-esc="o.company_id.name"/> -->
                                    <div class="col-xs-6">
                                        <img t-if="res_company.logo" t-att-src="'data:image/png;base64,%s' % res_company.logo"
                                            style="max-height: 85px;" />
                                    </div>
                                    <div class="col-xs-6 text-right">
                                        <strong><span t-field="res_company.partner_id" /></strong><br/>
                                        <span t-field="res_company.partner_id.street" />, <span t-field="res_company.partner_id.city" /> - <span t-field="res_company.partner_id.country_id" /><br/>
                                        <span t-field="res_company.partner_id.vat" /><br/>
                                        <span t-field="res_company.partner_id.website" /><br/>
                                        <span t-field="res_company.partner_id.email" /><br/>
                                        <span t-field="res_company.partner_id.phone" /><br/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_structure">
                                <table class="table">
                                    <tr>
                                        <td align="center"><h3>REPORTE DE CONSUMO DE AGUA - <t t-esc="docs.period.name"/></h3></td>
                                    </tr>
                                </table>
                            </div>

                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Per√≠odo</th>
                                        <th>Propietario</th>
                                        <th>Departamento</th>
                                        <th align="right">Contador anterior</th>
                                        <th align="right">Contador actual</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="sum" t-value="0.00"/>
                                    <t t-set="index" t-value="0"/>
                                    <t t-set="percent" t-value="0"/>
                                    <t t-set="apartment" t-value="301"/>

                                    <tr t-foreach="docs" t-as="o">
                                        <t t-set="index" t-value="index+1"/>
                            
                                        <td><t t-esc="index"></t></td>
                                        <td><t t-esc="o.period.name"></t></td>
                                        <td><t t-esc="o.name.name"></t></td>
                                        <td>
                                            <span t-foreach="o.name.ownership_id" t-as="t">
                                                <span t-if="t.type=='apartment'"><t t-esc="t.name" /></span>
                                            </span>
                                        </td>
                                        <td align="right"><t t-esc="o.old"></t></td>
                                        <td align="right"><t t-esc="o.current"></t></td>
                                        <td><t t-esc="o.date"></t></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                <!-- </t> -->
            </t>
        </template>
    </data>
</openerp>