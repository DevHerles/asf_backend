<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="asf_payment_order" inherit_id="sale.report_saleorder_document">
            
            
            
            <xpath expr="//div[@class='oe_structure'][1]" position="before">
                <div class="oe_structure">
                    <table class="table">
                        <tr>
                            <td align="center"><h3>MANTENIMIENTO GENERAL</h3></td>
                        </tr>
                    </table>
                </div>    
            </xpath>

            <xpath expr="//h2" position="replace">
                <h2>
                    <span t-if="doc.state not in ['draft','sent']">Orden de pago # </span>
                    <span t-if="doc.state in ['draft','sent']">Orden de pago # </span>
                    <span t-field="doc.name"/> (<span t-field="doc.period.name"/>)
                </h2>
            </xpath>

            <xpath expr="//div[@class='col-xs-5 col-xs-offset-1']" position="replace">

                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id"></t>
                </t>
                <t t-if="not o or not 'company_id' in o">
                    <t t-set="company" t-value="res_company"></t>
                </t>

                <div class="header">
                    <div class="row">
                        <div class="col-xs-6 text-right">
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                                style="max-height: 85px;" />
                        </div>
                        <div class="col-xs-6 text-right">
                            <strong><span t-field="company.partner_id" /></strong><br/>
                            <span t-field="company.partner_id.street" />, <span t-field="company.partner_id.city" /> - <span t-field="company.partner_id.country_id" /><br/>
                            <span t-field="company.partner_id.vat" /><br/>
                            <span t-field="company.partner_id.website" /><br/>
                            <span t-field="company.partner_id.email" /><br/>
                            <span t-field="company.partner_id.phone" /><br/>
                        </div>
                    </div>
                </div>

                <!-- <div class="col-xs-5 col-xs-offset-1">

                    <table class="table">
                        <tr><td>Phone:</td></tr>
                        <tr><td>Contact:</td></tr>
                        <tr><td>Web:</td></tr>
                    </table> 
                </div> -->
            </xpath>
            <xpath expr="//div[@class='oe_structure'][last()]" position="after">
                <div class="oe_structure">
                    <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id"></t>
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company" t-value="res_company"></t>
                    </t>
                    
                    <table class="table">
                        <tr>
                            <td style="width: 50%">
                                <span> <strong>Modadalidad de Pago: </strong> </span><br/>
                                <span>Banco: </span> <span t-field="company.bank_name" /><br/>
                                <span>Cta. Corriente Soles: </span> <span t-field="company.bank_account" /><br/>
                                <span>A nombre de: </span> <span t-field="company.bank_owner" />
                            </td>
                            <td style="width: 50%">
                                <span> <strong>Nota: </strong> </span><br/>
                                <span>Se considera MOROSO el primer dia del mes siguiente. Remitir el voucher de pago a: </span> <span t-field="company.email" />
                            </td>
                        </tr>
                    </table>                
                </div>
            </xpath>
            <!-- <xpath expr="//div[@class='oe_structure'][last()]" position="after">
                <div class="oe_structure">
                    <table class="table">
                        <tr>
                            <td>Created By</td>
                            <td>Validated By</td>
                            <td>Received By</td>
                        </tr>
                    </table>                
                </div>
            </xpath> -->
        </template>
    </data>
</odoo>