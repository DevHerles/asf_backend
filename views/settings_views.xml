<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_condominium_configuration" model="ir.ui.view">
            <field name="name">Configure Condominium</field>
            <field name="model">condominium.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Condominium" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link" special="cancel"/>
                    </header>
                    <group string="Condominium" name="condominium_group">
                        <!-- <field name="water_default_item"/> -->
                        <filed name="deposit_product_id_settings"/>
                        <!-- <label for="module_mass_mailing_themes" string="Mass mailing themes"/> -->
                        <div>
                            Demo!
                        </div>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_condominium_configuration" model="ir.actions.act_window">
            <field name="name">Configure Condominium</field>
            <field name="res_model">condominium.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_condominium_configuration" name="ConfiguraciÃ³n" parent="main_condominium_menu"
            sequence="100"/>
        <menuitem id="menu_condominium_global_settings" name="Ajustes" 
            parent="menu_condominium_configuration" sequence="0" action="action_condominium_configuration" groups="base.group_system"/>
</odoo>
