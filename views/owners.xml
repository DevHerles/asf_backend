        <!-- owner form view -->
        <record model="ir.ui.view" id="owner_form_view">
            <field name="name">owner.form</field>
            <field name="model">openacademy.owner</field>
            <field name="arch" type="xml">
                <form string="owner Form">
                    <sheet>
                        <group>
                            <group string="General">
                                <field name="doi"/>
                                <field name="name"/>
                                <field name="email"/>
                                <field name="cellphone"/>
                                <field name="job"/>
                            </group>
                        </group>
                        <!-- <label for="attendee_ids"/> -->
                        <!-- <field name="attendee_ids"/> -->
                    </sheet>
                </form>
            </field>
        </record>

        <!-- owner tree/list view -->
        <record model="ir.ui.view" id="owner_tree_view">
            <field name="name">owner.tree</field>
            <field name="model">openacademy.owner</field>
            <field name="arch" type="xml">
                <tree string="owner Tree">
                    <field name="doi"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="cellphone"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="owner_list_action">
            <field name="name">Propietarios</field>
            <field name="res_model">openacademy.owner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="owner_menu" name="Propietarios"
                  parent="openacademy_menu"
                  action="owner_list_action"/>
        
    </data>
</odoo>