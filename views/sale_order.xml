<odoo>
  <data>
      <record id="create_order_form_inherit" model="ir.ui.view">
        <field name="inherit_id" ref="openacademy.tower_form_view"/>
        <field name="model">openacademy.tower</field>
        <field name="arch" type="xml">
          <!-- Add a header with button to the existing view -->
          <xpath expr="//sheet" position="before">
              <header>
                <button name="create_order" string="Create order" type="object" class="oe_highlight"/>
              </header>
          </xpath>
        </field>
      </record>
  </data>
</odoo>