        <record id="apartment_product_search_view" model="ir.ui.view" >
            <field name="name">asf.product.template</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <filter name="apartments" string="Departamentos"
                            domain="[('type', '=', 'apartment')]"/>
                    <filter name="depots" string="Depósitos"
                            domain="[('type', '=', 'depot')]"/>
                    <filter name="parkings" string="Estacionamientos"
                            domain="[('type', '=', 'parking')]"/>
                    <!-- <group string="Group By">
                        <filter name="by_apartment" string="Departamento"
                                context="{'group_by': 'type'}"/>
                    </group> -->
                </search>
            </field>
        </record>

        <record id="view_ownership_property_form" model="ir.ui.view">
            <field name="name">res.ownership.property.form.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">1</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <!-- <field name="name" position="attributes">
                    <attribute name="placeholder">Número de Departamento, Depósito o Estacionamiento</attribute>
                </field> -->
                <field name="type" position="after">
                    <field name="tower_id" attrs="{'invisible':[('type', '!=', 'apartment'), ('type', '!=', 'parking'), ('type', '!=', 'depot')]}" />
                    <field name="floor_id" attrs="{'invisible':[('type', '!=', 'apartment'), ('type', '!=', 'parking'), ('type', '!=', 'depot')]}" />
                    <field name="asf_area" attrs="{'invisible':[('type', '!=', 'apartment'), ('type', '!=', 'parking'), ('type', '!=', 'depot')]}" />
                    <!-- <field name="floor_id" attrs="{'invisible':[('type', '!=', 'parking')]}" /> -->
                    <field name="asf_percent" attrs="{'invisible':[('type', '!=', 'apartment'), ('type', '!=', 'parking'), ('type', '!=', 'depot')]}"/>
                    <!-- <field name="asf_percent" attrs="{'invisible':[('type', '!=', 'depot')]}" /> -->
                    <!-- <field name="asf_percent" attrs="{'invisible':[('type', '!=', 'parking')]}" /> -->
                </field>
            </field>
        </record>

