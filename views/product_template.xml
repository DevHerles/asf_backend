                <tree string="Apartment Tree">
                    <field name="name" string="Nombre"/>
                    <field name="tower_id"/>
                    <field name="floor_id"/>
                    <field name="asf_area" sum="Total area m2"/>
                    <field name="asf_percent"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

