<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- add css / js -->
        <template id="assets_backend" name="sales_team assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link href="/condominium/static/src/css/d3.bar.widget.css" rel="stylesheet"/>
                <script type="text/javascript" src="/condominium/static/src/js/d3.widget.js"></script>
                <script type="text/javascript" src="/condominium/static/src/js/d3.bar.widget.js"></script>
                <!-- <script type="text/javascript" src="/condominium/static/src/js/c3.min.js"></script> -->
                <!-- <script type="text/javascript" src="/condominium/static/src/js/condominium_dashboard.js"></script> -->
            </xpath>
        </template>

        <record id="channel_dashboard_kanban_view" model="ir.ui.view">
            <field name="name">condominium.dashboard.view</field>
            <field name="model">condominium.dashboard</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_salesteam_kanban" create="0" js_class="sales_team_dashboard">
                    <field name="name"/>
                    <field name="color"/>
                    <field name="orders_count"/>
                    <field name="quotations_count"/>
                    <field name="orders_done_count"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)}">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary"><field name="name"/></div>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">More <i class="fa fa-caret-down"/></a>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_content o_visible">
                                    <div class="row">
                                        <div class="col-xs-12 o_kanban_primary_left" name="to_replace_in_sale_crm">
                                            <div id="chart">
                                            </div>
                                            <field name="quotations_count" widget="bar3d" style="width:120px; height: 90px;"
                                                options="{'max_field': 'total'}">
                                            Progress
                                            </field>
                                        </div>
                                        <div class="col-xs-6 o_kanban_primary_right">
                                        </div>
                                    </div>
                                </div><div class="container o_kanban_card_manage_pane o_invisible">
                                    <div class="row">
                                        <div class="col-xs-4 o_kanban_card_manage_section o_kanban_manage_view">
                                            <div class="o_kanban_card_manage_title">
                                                <span>View</span>
                                            </div>
                                        </div>
                                        <div class="col-xs-4 o_kanban_card_manage_section o_kanban_manage_new">
                                            <div class="o_kanban_card_manage_title">
                                                <span>New</span>
                                            </div>
                                            <div class="o_kanban_card_manage_body">
                                            </div>
                                        </div>
                                        <div class="col-xs-4 o_kanban_card_manage_section o_kanban_manage_reports">
                                            <div class="o_kanban_card_manage_title">
                                                <span>Reports</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div t-if="widget.editable" class="o_kanban_card_manage_settings row" groups="sales_team.group_sale_manager">
                                        <div class="col-xs-8">
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </div>
                                        <div class="col-xs-4 text-right">
                                            <a type="edit">Settings</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <script>
                                <!-- start(); -->
                            </script>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="condominium_dashboard_action" model="ir.actions.act_window">
            <field name="name">Dashboard</field>
            <field name="res_model">condominium.dashboard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="view_mode">kanban</field>
        </record>

        <menuitem name="Dashboard" id="webkul_employees_main_menu"/>
            <menuitem  id="employees_dashboard_menu" parent="main_condominium_menu" sequence="0" name="Dashboard" action="condominium_dashboard_action"/>
    
    </data>
</odoo>