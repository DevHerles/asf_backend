<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_team_salesteams_view_kanban" model="ir.ui.view">
        <field name="name">condominium.kanban</field>
        <field name="model">condominium.dashboard</field>
        <field name="inherit_id" ref="condominium.channel_dashboard_kanban_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//templates" position="before">
                    <field name="orders_count"/>
                    <field name="quotations_count"/>
                    <field name="orders_done_count"/>
                </xpath>
                <xpath expr="//div[contains(@class, 'o_kanban_primary_right')]" position="inside">
                    <div class="row mb4">
                        <div class="col-xs-8">
                            <a name="%(water_counter_list_action)d" type="action">
                                Consumo de agua
                            </a>
                        </div>
                        <div class="col-xs-4 text-right">
                            <field name="orders_count"/>
                        </div>
                    </div>
                </xpath>
                <xpath expr="//div[contains(@class, 'o_kanban_card_manage_body')]" position="inside">
                    <div class="row mb4">
                        <div class="col-xs-8">
                            <a name="%(water_counter_list_action)d" type="action">
                                Departamentos
                            </a>
                            <a name="%(tower_list_action)d" type="action">
                                Torres
                            </a>
                        </div>
                    </div>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
